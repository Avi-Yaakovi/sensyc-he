    <!-- JavaScript Logic -->
    <script>
        // Set Default Font for Chart.js
        Chart.defaults.font.family = "'Assistant', sans-serif";

        // ---------------------------------------------------------
        // Utility Function: Label Wrapping (Max 16 chars per line)
        // ---------------------------------------------------------
        function splitLabel(label) {
            if (label.length <= 16) return label;
            
            const words = label.split(' ');
            const lines = [];
            let currentLine = words[0];

            for (let i = 1; i < words.length; i++) {
                if ((currentLine + " " + words[i]).length <= 16) {
                    currentLine += " " + words[i];
                } else {
                    lines.push(currentLine);
                    currentLine = words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        // ---------------------------------------------------------
        // Utility: Tooltip Configuration for Multiline Labels
        // ---------------------------------------------------------
        const tooltipPlugin = {
            tooltip: {
                backgroundColor: 'rgba(17, 24, 39, 0.9)', 
                rtl: true,
                titleFont: { size: 14, weight: 'bold' },
                bodyFont: { size: 13 },
                padding: 12,
                callbacks: {
                    title: function(tooltipItems) {
                        const item = tooltipItems[0];
                        let label = item.chart.data.labels[item.dataIndex];
                        if (Array.isArray(label)) {
                            return label.join(' ');
                        } else {
                            return label;
                        }
                    }
                }
            }
        };

        // ---------------------------------------------------------
        // Chart 1: Passive Data (Doughnut)
        // ---------------------------------------------------------
        const ctxPassive = document.getElementById('chartPassiveData').getContext('2d');
        new Chart(ctxPassive, {
            type: 'doughnut',
            data: {
                labels: ['מידע "חשוך" לא מנותח', 'מידע מנותח ובשימוש'],
                datasets: [{
                    data: [90, 10],
                    backgroundColor: ['#CBD5E1', '#2563EB'], 
                    borderWidth: 0,
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '70%',
                plugins: {
                    ...tooltipPlugin,
                    legend: {
                        position: 'bottom',
                        labels: { font: { size: 12 }, usePointStyle: true }
                    }
                }
            }
        });

        // ---------------------------------------------------------
        // Chart 2: The Action Gap (Bar Chart)
        // ---------------------------------------------------------
        const ctxAction = document.getElementById('chartActionGap').getContext('2d');
        const labelsAction = [
            'בקשות מעקב שזוהו', 
            'משימות שנוצרו בפועל', 
            'מעקב מוצלח'
        ].map(splitLabel);

        new Chart(ctxAction, {
            type: 'bar',
            data: {
                labels: labelsAction,
                datasets: [
                    {
                        label: 'כלי סטנדרטי',
                        data: [100, 20, 15],
                        backgroundColor: '#94A3B8', 
                        borderRadius: 4
                    },
                    {
                        label: 'עם Sensyc',
                        data: [100, 100, 85],
                        backgroundColor: '#F59E0B', 
                        borderRadius: 4
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    ...tooltipPlugin,
                    legend: { position: 'top' }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        position: 'right',
                        title: { display: true, text: 'אחוזים (%)' },
                        max: 110
                    },
                    x: {
                        grid: { display: false }
                    }
                }
            }
        });

        // ---------------------------------------------------------
        // Chart 3: Sentiment & Skills Radar (Radar Chart)
        // ---------------------------------------------------------
        const ctxSentiment = document.getElementById('chartSentiment').getContext('2d');
        const labelsSentiment = [
            'ציון אמפתיה', 
            'טיפול בהתנגדויות', 
