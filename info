                    fill: true,
                    backgroundColor: 'rgba(6, 182, 212, 0.2)', 
                    borderColor: '#06B6D4',
                    pointBackgroundColor: '#06B6D4',
                    pointBorderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    ...tooltipPlugin
                },
                scales: {
                    r: {
                        angleLines: { color: '#E2E8F0' },
